{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["dom", "es6"],
    "skipLibCheck": true /* Skip type checking of declaration files. */,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "compileOnSave": false
}
